@inject IAppDataSingleton AppData
<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                Tausendblatt
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItemWithBarLink Page=@AppData.Pages.Index />
         @*    <BarItemWithBarLink Page=@AppData.Pages.Contact /> *@
            <BarItemWithBarLink Page=@AppData.Pages.House />
            <BarItemWithBarLink Page=@AppData.Pages.Shopping />
            <BarItemWithBarLink Page=@AppData.Pages.Eat />
            <BarItemWithBarLink Page=@AppData.Pages.Vicinity />
            <BarItemWithBarLink Page=@AppData.Pages.Emergency />
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Smartphone" />
                        Apps
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/todo">
                            Todo
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarEnd>
      @*   <BarEnd>
            <BarItem>
                <BarLink To="/about">
                    <BarIcon IconName="IconName.InfoCircle" />
                    Über...
                </BarLink>
            </BarItem>
        </BarEnd> *@
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/favicon.svg" style="width:32px; height: 32px" />;
}
