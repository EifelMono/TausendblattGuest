    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="@App.FavIcon(IconSize.Large)" />
                Tausendblatt
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItemPage Page="@AppData.Pages.Index" />
            <BarItemPage Page=@AppData.Pages.House />
            <BarItemPage Page=@AppData.Pages.Shopping />
            <BarItemPage Page=@AppData.Pages.Eat />
            <BarItemPage Page=@AppData.Pages.Vicinity />
            <BarItemPage Page=@AppData.Pages.Emergency />

            <BarItemPageWithSubpages Page="@AppData.Pages.QrCode" SubPages="@AppData.Pages.QrCodesSubPages" />
        </BarStart>
        <BarEnd>
            <BarItemPageWithSubpages Page="@AppData.Pages.WebApp" SubPages="@AppData.Pages.WebAppSubPages" />
        </BarEnd>
    </BarMenu>
</Bar>
