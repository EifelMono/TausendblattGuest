@inject IAppDataSingleton AppData
<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                Tausendblatt
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItemPage Page="@AppData.Pages.Index" />
            <BarItemPage Page=@AppData.Pages.House />
            <BarItemPage Page=@AppData.Pages.Shopping />
            <BarItemPage Page=@AppData.Pages.Eat />
            <BarItemPage Page=@AppData.Pages.Vicinity />
            <BarItemPage Page=@AppData.Pages.Emergency />

            <BarItemPageWithSubpages Page="@AppData.Pages.QrCode" SubPages="@AppData.Pages.QrCodesSubPages" />
        </BarStart>
        <BarEnd>
            <BarItemPageWithSubpages Page="@AppData.Pages.WebApp" SubPages="@AppData.Pages.WebAppSubPages" />
        </BarEnd>
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/favicon.svg" style="width:32px; height: 32px" />;


}
